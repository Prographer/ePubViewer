#parse("module/top.vm")
<div data-role="page">

    <div class="container" style="margin-top: 100px;">
        <div class="title" style="margin-bottom: 50px;">
            <h1 class="text-center"><strong>$app-name</strong></h1>
            <h4 class="text-center">$app-version</h4>
        </div>

        <div class="row">
            <ul class="col-sm-10 col-sm-offset-2">
                #foreach ($epub in $epub_urls)
                    <li><a href="/viewer?epub-url=$epub.getUrl()">$epub.getTitle() - $epub.getDescription()</a></li>
                #end
            </ul>
        </div>

        <form action="/viewer" method="GET" class="form-horizontal">
            <div class="form-group">
                <label for="epub-url" class="col-sm-2 control-label">Epub URL</label>
                <input class="col-sm-10" type="input" name="epub-url" id="epub-url"
                       value="${default_url}"/>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <input type="submit" value="보기" class="btn btn-info pull-right">
                    <input type="button" value="초기화" class="btn btn-warning pull-right" style="margin-right: 15px"
                           onclick="$('#epub-url').val('')">

                </div>
            </div>
        </form>
    </div>
</div><!-- page -->
#parse("module/bottom.vm")
